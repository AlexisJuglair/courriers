{% extends 'base.html.twig' %}

{% block title %}Connexion - {{ parent() }}{% endblock %}

{% block body %}

    <div class="container text-center">
        <h1 class="py-5 mb-0">CONNEXION</h1>
        <div class="row d-flex align-items-center">
            <div class="col col-md-4">
                <form method="post">

                    {% if error %}
                        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                    {% endif %}

                    {# {% if app.user %}
                        <div class="mb-3">
                            You are logged in as {{ app.user.username }}, <a href="{{ path('app_logout') }}">Logout</a>
                        </div>
                    {% endif %} #}

                    <label for="inputUsername" class="py-3">Identifiant</label>
                    <input type="text" value="{{ last_username }}" name="username" id="inputUsername" class="form-control shadow w-50 m-auto" autocomplete="username" required autofocus>
                    <label for="inputPassword" class="py-3">Mot de passe</label>
                    <input type="password" name="password" id="inputPassword" class="form-control shadow w-50 m-auto" autocomplete="current-password" required>

                    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                    {# Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                    See https://symfony.com/doc/current/security/remember_me.html #}

                    <div class="checkbox py-3">
                        <label>
                            <input type="checkbox" name="_remember_me"> Se souvenir
                        </label>
                    </div>
                    

                    <button class="btn btn-lg btn-primary" type="submit">
                        Se connecter
                    </button>
                </form>

                <div class="d-block d-md-none">
                    <p class="mt-3">OU</p>

                    <a class="btn btn-lg btn-primary" href="{{ path('app_register') }}">
                        Créer un compte
                    </a>
                </div>
                
            </div>

            <div class="col col-md-4 d-none d-md-block my-2">
                <div class="horizontal-bar"></div>
            </div>

            <div class="col col-md-4  d-none d-md-block">
                <a class="btn btn-lg btn-primary" href="{{ path('app_register') }}">
                    Créer un compte
                </a>
            </div>
        </div>
    </div>
{% endblock %}
